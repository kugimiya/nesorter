generator client {
  provider = "prisma-client-js"
}

datasource storage {
  provider = "sqlite"
  url = "file:./storage.db"
}

model Classification {
  id     Int @id @default(autoincrement())
  name   String
  values String
}

model ClassificatedItem {
  filehash String @id
  json     String
}

model Playlists {
  id   Int @id @default(autoincrement())
  name String
  type String
}

model ManualPlaylistItem {
  id         Int @id @default(autoincrement())
  playlistId Int
  order      Int
  filehash   String
}

model FSItem {
  filehash   String @id
  path       String
  name       String
  type       String
}

model FSItemMeta {
  filehash  String @id
  id3Artist String
  id3Title  String
}
